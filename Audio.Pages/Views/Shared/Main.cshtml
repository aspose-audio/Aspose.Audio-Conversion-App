@Html.Partial("Modals")

@if (Model.SaveAsOptions != null)
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#saveAs').select2();
            var val = $('#saveAs option:eq(0)').val();
            $('#saveAs').val(val);
            $('#saveAs').change();
        });
    </script>
}